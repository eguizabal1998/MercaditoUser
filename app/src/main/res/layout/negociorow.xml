<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/whiteTextColor">

        <TextView
            android:id="@+id/tv_negociorow_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:text="Nombre del negocio"/>

        <TextView
            android:id="@+id/tv_negociorow_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="16sp"
            android:text="Descripcion del negocio"/>

            <ImageView
                android:id="@+id/imgv_negociorow_portada"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/cargando"
                android:background="@drawable/redondeado1"/>


    </LinearLayout>


</LinearLayout>